@model SaludPublica.ViewModels.SintomasPorEnfermedadViewModel;

@{
    ViewData["Title"] = "Delete";
}

<h2>Eliminar</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Enfermedad</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Enfermedad.Nombre)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Enfermedad.Nombre)
        </dd>
    </dl>
    <h4>Sintomas:</h4>
    <dl class="dl-horizontal">
        @foreach (var item in Model.Sintomas)
        {
            <dt>
                Descripcion:
            </dt>
            <dd>
                @item.Descripcion
            </dd>
        }
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Enfermedad.EnfermedadID" />
        <input type="submit" value="Delete" class="btn btn-default" /> |
        <a asp-action="Index">Volver Atras</a>
    </form>
</div>
