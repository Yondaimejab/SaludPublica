@model  SaludPublica.ViewModels.SintomasPorEnfermedadViewModel;

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Enfermedad</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Enfermedad.EnfermedadID" />
            <div class="form-group">
                <label asp-for="Enfermedad.Nombre" class="control-label"></label>
                <input asp-for="Enfermedad.Nombre" class="form-control" />
                <span asp-validation-for="Enfermedad.Nombre" class="text-danger"></span>
            </div>
            <h2>Sintomas de @Model.Enfermedad.Nombre</h2>
            <hr class="my-2" />
            <div class="container" id="SintomasListDiv">
                @foreach (var item in Model.Sintomas)
                 {
                <div class="form-group col-md-3">
                    <label asp-for="@item.SintomaID">Sintoma: </label>
                    <select selected="@item.Descripcion" name="sintomas" class="form-control col-md-3" id="@item.SintomaID">
                        @foreach(var sintoma in Model.Sintomas ){ 
                            <option value="@sintoma.SintomaID"> @sintoma.Descripcion </option>
                        }
                    </select>
                    <span asp-validation-for="@item.SintomaID"></span>
                </div>
                 }
            </div>
            <div class="form-group">
                <button class="btn btn-primary" type="button" onclick="GetSintomas('../../Sintomas/GetSintomas');">Añadir Sintoma</button>
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
