@model IEnumerable<SaludPublica.Models.Pais>

@{
    ViewData["Title"] = "Paises";
}

<h2>Paises</h2>

<p>
    <a class="btn btn-success" asp-action="Create">Crear Pais</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                <a class="btn btn-sm btn-primary" asp-action="Details" asp-route-id="@item.PaisID">Detalles</a> |
                <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.PaisID">Editar</a> |
                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.PaisID">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
