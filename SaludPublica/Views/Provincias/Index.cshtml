@model IEnumerable<SaludPublica.Models.Provincia>

@{
    ViewData["Title"] = "Provincias";
}

<h2>Provincias</h2>

<p>
    <a class="btn btn-success" asp-action="Create">Crear Provincia</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Pais)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pais.Nombre)
            </td>
            <td>
                <a class="btn btn-sm btn-primary"asp-action="Details" asp-route-id="@item.ProvinciaID">Detalles</a> |
                <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.ProvinciaID">Editar</a> |
                <a class="btn btn-sm btn-danger"asp-action="Delete" asp-route-id="@item.ProvinciaID">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
