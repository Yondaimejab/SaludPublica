@model SaludPublica.ViewModels.PacienteProvinciaViewModel;

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Paciente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Paciente.Nombre" class="control-label"></label>
                <input asp-for="Paciente.Nombre" class="form-control" />
                <span asp-validation-for="Paciente.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Paciente.Apellido" class="control-label"></label>
                <input asp-for="Paciente.Apellido" class="form-control" />
                <span asp-validation-for="Paciente.Apellido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Paciente.Telefono" class="control-label"></label>
                <input asp-for="Paciente.Telefono" class="form-control" />
                <span asp-validation-for="Paciente.Telefono" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Paciente.Calle" class="control-label"></label>
                <input asp-for="Paciente.Calle" class="form-control" />
                <span asp-validation-for="Paciente.Calle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Paciente.NumeroDeCasa" class="control-label"></label>
                <input asp-for="Paciente.NumeroDeCasa" class="form-control" />
                <span asp-validation-for="Paciente.NumeroDeCasa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Paciente.Sector" class="control-label"></label>
                <input asp-for="Paciente.Sector" class="form-control" />
                <span asp-validation-for="Paciente.Sector" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Provincia</label>
                @Html.DropDownListFor(m => m.Paciente.ProvinciaID, new SelectList(Model.Provincias,"ProvinciaID","Nombre"),"Elija Una Provincia",new { Class = "col-md-3 form-control"})
            </div>
            <div class="form-group">
                <label asp-for="Paciente.Edad" class="control-label"></label>
                <input asp-for="Paciente.Edad" class="form-control" />
                <span asp-validation-for="Paciente.Edad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Paciente.Sexo" class="control-label"></label>
                <input asp-for="Paciente.Sexo" class="form-control" />
                <span asp-validation-for="Paciente.Sexo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
