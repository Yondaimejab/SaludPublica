@model SaludPublica.Models.Paciente

@{
    ViewData["Title"] = "Detalle Paciente";
}

<h2>Detalles</h2>

<div>
    <h4>Paciente</h4>
    <hr />
    <div class="row">
        <div class="col-md-3">
            @if (Model.ImageData != null)
            {
                <img src="data:image/png;base64,@Convert.ToBase64String(Model.ImageData)" style="width:325px" />
            }
            else
            {
                <img id="perfil-photo" src="~/images/Perfil.jpg" style="width:325px" />

            }
        </div>
        <div class="col-md-4">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Nombre)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Apellido)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Apellido)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Telefono)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Telefono)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Calle)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Calle)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.NumeroDeCasa)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.NumeroDeCasa)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Sector)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Sector)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.EsCliente)
                </dt>
                <dd>
                    @(Model.EsCliente ? "Si": "No")
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.FechaNacimiento)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.FechaNacimiento)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Sexo)
                </dt>
                <dd>
                    @(Model.Sexo == "M" ? "Masculino" : "Femenino")
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Provincia)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Provincia.Nombre)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Descripcion)
                </dd>
            </dl>
        </div>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.PacienteID" class="btn btn-primary">Editar</a> |
    <a asp-action="Index">Volver Atras</a>
</div>
